@using CheckIt.Entities;
@model IEnumerable<Category>
@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload</h2>
<p>Upload your checklist, just follow <a href="#">this rules</a>.</p>
@using (Html.BeginForm("Upload", "Checklist", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <input type="file" name="file" />
    <input type="submit" name="Submit" id="Submit" value="Upload" />
    
    @Html.DropDownList("selectedCategory", new SelectList(Model, "Id", "Name"));
}
